---
import { getCollection } from 'astro:content';
import BaseLayout from "./BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const { frontmatter } = Astro.props;
const allPosts = await getCollection("blog");

---

<BaseLayout pageTitle={frontmatter.title}>
    <p>Written by {frontmatter.author}</p>
    <p>in : {frontmatter.location}</p>
    <p>Published on: {frontmatter.pubDate.toLocaleDateString()}</p>
    <p><em>{frontmatter.description}</em></p>
    <slot />
    <p>Articles connexes</p>
    <div class="tags">
    {frontmatter.tags.map((tag: any) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)
    )}
    </div>
    <p>DÃ©couvrez mes autres posts :</p>
    <ul>
        {allPosts.map((post: any) => <BlogPost url={`/posts/${post.id}`} title={post.data.title} author={post.data.author} pubDate={post.data.pubDate.toString().slice(0,10)}/>)}
    </ul>
</BaseLayout>
<style>
a {
    color: #00539F;
}

.tags {
    display: flex;
    flex-wrap: wrap;
}

.tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
}
</style>