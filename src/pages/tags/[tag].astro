---
import { getCollection } from "astro:content";
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';

//Invesitguer le export async
export async function getStaticPaths() {
    const allPosts = await getCollection("blog");
    //Construction de la liste de tous les tags (liste rendue flat (on supprime la profondeur) 
    // et les éléments en double sont supprimés ( opérateur ...new))
    const uniqueTags = [...new Set(allPosts.map((post: any) => post.data.tags).flat())];
    
    //Pour chaque tag, on retourne la liste de tous les posts qui contiennent le tag
    return uniqueTags.map((tag) => {
        //filtrage des posts pour un tag donné
        const filteredPosts = allPosts.filter((post: any) => post.data.tags?.includes(tag));
        //On retourne le tag ==> permet de générer la page de manière dynamique et la liste des posts
        return {
            params: {tag},
            props: {posts: filteredPosts}
        };
  });
}

//On récupère les valeurs pour pouvoir les utiliser dans notre HTML
const { tag } = Astro.params;
const { posts } = Astro.props;


---
<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {posts.map((post: any) => <BlogPost url={`/posts/${post.id}`} title={post.data.title} author={post.data.author} pubDate={post.data.pubDate.toString().slice(0,10)}/>)}
  </ul>
</BaseLayout>